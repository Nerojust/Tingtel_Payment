<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="tingtel.payment.fragments.dashboard.DashboardFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_transferAirtimeActivity"
            app:destination="@id/transferAirtimeActivity"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_mainFragment_to_historyActivity"
            app:destination="@id/historyActivity"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_mainFragment_to_transferAirtimeSuccessFragment2"
            app:destination="@id/transferAirtimeSuccessFragment2"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_mainFragment_to_statusActivity"
            app:destination="@id/statusActivity"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <activity
        android:id="@+id/transferAirtimeActivity"
        android:name="tingtel.payment.activities.transfer_airtime.TransferAirtimeActivity"
        android:label="activity_transfer_airtime"
        tools:layout="@layout/activity_transfer_airtime" />
    <activity
        android:id="@+id/historyActivity"
        android:name="tingtel.payment.activities.history.HistoryActivity"
        android:label="activity_history"
        tools:layout="@layout/activity_history" />
    <fragment
        android:id="@+id/transferAirtimeSuccessFragment2"
        android:name="tingtel.payment.fragments.transfer_airtime.TransferAirtimeSuccessFragment"
        android:label="fragment_transfer_airtime_success"
        tools:layout="@layout/fragment_transfer_airtime_success" />
    <activity
        android:id="@+id/statusActivity"
        android:name="tingtel.payment.activities.history.StatusActivity"
        android:label="activity_status"
        tools:layout="@layout/activity_status" />
</navigation>