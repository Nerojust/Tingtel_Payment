<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp"
        app:cardMaxElevation="2dp"
        app:cardPreventCornerOverlap="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_network"
                android:layout_width="50dp"
                android:layout_height="50dp"
                tools:src="@drawable/mtn_logo" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_network_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/img_network"
                    android:layout_marginLeft="@dimen/_7ssp"
                    android:layout_toRightOf="@+id/img_network"
                    android:fontFamily="@font/rubik_regular"
                    android:textAllCaps="true"
                    android:textSize="@dimen/_9ssp"
                    android:textStyle="bold"
                    tools:text="mtn" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/img_network"
                    android:layout_marginLeft="@dimen/_7ssp"
                    android:layout_toRightOf="@+id/img_network"
                    android:fontFamily="@font/rubik_regular"
                    android:textAllCaps="true"
                    android:textColor="@color/tingtel_red_color"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold"
                    tools:text="NAME" />

                <TextView
                    android:id="@+id/tv_phone_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_7ssp"
                    android:layout_toRightOf="@+id/img_network"
                    android:fontFamily="@font/rubik_regular"
                    android:textSize="@dimen/_10ssp"
                    android:textStyle="bold"
                    tools:text="@string/phone_number" />
            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/tingtel_red_color" />

            <ImageView
                android:id="@+id/btn_delete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.7"
                android:src="@drawable/ic_delete_black_24dp"
                android:text="@string/delete" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>