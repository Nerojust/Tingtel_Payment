<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.signup.SignUpHomeFragment">

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@drawable/fragment_header">
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Tingtel"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>


          <androidx.cardview.widget.CardView
              android:layout_width="match_parent"
              android:layout_marginTop="110dp"
              android:layout_height="match_parent"
              android:layout_marginHorizontal="10dp"
              app:cardBackgroundColor="@color/white"
              app:cardCornerRadius="22dp">
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Create An Account"
                      android:textColor="@color/colorPrimary"
                      android:textStyle="bold"
                      android:textSize="22sp"
                      android:layout_gravity="center_horizontal"
                      android:layout_marginTop="30dp"/>



                  <com.google.android.material.textfield.TextInputLayout
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_margin="@dimen/activity_horizontal_margin">

                      <com.google.android.material.textfield.TextInputEditText
                          android:id="@+id/tv_first_name"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:hint="First Name" />

                  </com.google.android.material.textfield.TextInputLayout>


                  <com.google.android.material.textfield.TextInputLayout
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_margin="@dimen/activity_horizontal_margin">
                      <com.google.android.material.textfield.TextInputEditText
                          android:id="@+id/tv_last_name"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:hint="Last Name" />
                  </com.google.android.material.textfield.TextInputLayout>


                  <com.google.android.material.textfield.TextInputLayout
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_margin="@dimen/activity_horizontal_margin">
                      <com.google.android.material.textfield.TextInputEditText
                          android:id="@+id/tv_email_address"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:hint="Email Address" />
                  </com.google.android.material.textfield.TextInputLayout>


                  <com.google.android.material.textfield.TextInputLayout
                      android:id="@+id/tv_username"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_margin="@dimen/activity_horizontal_margin">

                      <com.google.android.material.textfield.TextInputEditText
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:hint="Username" />

                  </com.google.android.material.textfield.TextInputLayout>


                  <Button
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:background="@drawable/rounded_button_corners"
                      android:textColor="@color/white"
                      android:layout_gravity="center_horizontal"
                      android:layout_marginTop="30dp"
                      android:paddingHorizontal="60dp"
                      android:text="Sign Up"/>
                  <TextView
                      android:layout_marginTop="10dp"
                      android:layout_gravity="center_horizontal"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Have an account? login here"
                      android:layout_marginBottom="40dp"/>
              </LinearLayout>
          </androidx.cardview.widget.CardView>
      </RelativeLayout>

  </ScrollView>

</RelativeLayout>