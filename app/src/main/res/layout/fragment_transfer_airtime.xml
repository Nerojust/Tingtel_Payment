<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_height="match_parent" android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.dashboard.TransferAirtimeFragment"
    android:padding="20dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/choose_sim_to_transfer_from"/>

    <RadioGroup
        android:id="@+id/radioSim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp">

        <RadioButton
            android:id="@+id/radioSim1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mtn (Sim 1)"
            android:checked="true" />

        <RadioButton
            android:id="@+id/radioSim2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sim_2" />

    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/check_your_current_balance_before_transfer"/>

<Button
    android:id="@+id/btn_check_balance"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/button_round_corners"
    android:textColor="@color/white"

    android:layout_marginBottom="20dp"
    android:text="Check Airtime Balance"/>

    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="30dp"
        android:text="Amount To Transfer"/>

    <EditText
        android:id="@+id/ed_amount"
        android:inputType="number"
        android:background="@drawable/textview_rounded"
        android:hint="E.g #1500"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_next"
        android:background="@drawable/button_round_corners"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginVertical="30dp"
        android:text="@string/next"/>

    <TextView
        android:id="@+id/tv_get_transfer_pin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="#ff0000"
        android:text="New Users? Learn How To get your Transfer Pin"
        android:layout_marginBottom="30dp"/>
</LinearLayout>
</ScrollView>