<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        tools:context=".fragments.dashboard.TransferAirtimeFragment">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/choose_sim_to_transfer_from" />

        <RadioGroup
            android:id="@+id/radioSim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp">

            <RadioButton
                android:id="@+id/radioSim1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Mtn (Sim 1)" />

            <RadioButton
                android:id="@+id/radioSim2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sim_2" />

        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/check_your_current_balance_before_transfer" />

        <Button
            android:id="@+id/btn_check_balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_round_corners"

            android:text="Check Airtime Balance"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="8dp"
            android:text="Amount To Transfer" />

        <EditText
            android:id="@+id/ed_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_rounded"
            android:hint="E.g #1500"
            android:inputType="number" />

        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="30dp"
            android:background="@drawable/button_round_corners"

            android:text="@string/next"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_get_transfer_pin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dp"
            android:text="New Users? Learn How To get your Transfer Pin"
            android:textColor="#ff0000" />
    </LinearLayout>
</ScrollView>