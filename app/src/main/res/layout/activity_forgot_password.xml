<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tingtel_bg8"
    android:orientation="vertical"
    tools:context=".activities.settings.ForgotPasswordActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_15ssp"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".views.ForgotPasswordActivity"
        tools:showIn="@layout/activity_forgot_password">


        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_15ssp"
            android:layout_marginBottom="@dimen/_15ssp"
            android:src="@drawable/tingtel_one" />

        <TextView
            android:id="@+id/tv_forgot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15ssp"
            android:fontFamily="@font/rubik_regular"
            android:text="@string/seems_you_forgot_your_password"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/tingtel_white"
            android:textSize="@dimen/_14ssp" />

        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_15ssp"
            android:layout_marginTop="@dimen/_15ssp"
            android:fontFamily="@font/rubik_regular"
            android:text="@string/thats_ok_n_n_just_enter_your_email_and_you_will_receive_a_reset_link"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/tingtel_white"
            app:layout_constraintTop_toBottomOf="@+id/tv_forgot" />

        <EditText
            android:id="@+id/emailEdittext"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginHorizontal="@dimen/_15ssp"
            android:layout_marginTop="@dimen/_25sdp"
            android:background="@drawable/input_outline1"
            android:fontFamily="@font/rubik_regular"
            android:hint="@string/enter_your_email_address"
            android:inputType="textEmailAddress"
            android:paddingLeft="@dimen/_13ssp"
            android:textColorHint="@color/tingtel_white"
            app:layout_constraintTop_toBottomOf="@+id/tv_ok" />

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_15ssp"
            android:layout_marginTop="@dimen/_18ssp"
            android:background="@drawable/dashboard_buttons"
            android:fontFamily="@font/rubik_regular"
            android:paddingHorizontal="@dimen/_15ssp"
            android:text="@string/submit"
            android:textColor="@color/tingtel_white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/emailEdittext" />

    </LinearLayout>
</LinearLayout>