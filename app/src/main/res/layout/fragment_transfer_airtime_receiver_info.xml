<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tingtel_bg4"
    tools:context=".fragments.transfer_airtime.TransferAirtimeReceiverInfoFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="18dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="22dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingHorizontal="35dp">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="40dp"
                        android:fontFamily="@font/rubik_medium"
                        android:text="Receiver information"
                        android:textAlignment="center"
                        android:textColor="@color/tingtel_red_color"
                        android:textSize="22sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/raleway_regular"
                        android:text="@string/network" />

                    <Spinner
                        android:id="@+id/network_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginVertical="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/receivers_phone_number_edittext"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:drawableLeft="@drawable/ic_phone"
                                android:drawablePadding="8dp"
                                android:fontFamily="@font/raleway_regular"
                                android:hint="@string/enter_receiver_s_phone_number"
                                android:inputType="phone"
                                android:maxLength="11"
                                android:maxLines="1"
                                android:textSize="17sp" />

                            <ImageView
                                android:id="@+id/codeImageView"
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:layout_weight="0.7"
                                android:src="@drawable/code" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/rubik_medium_italic"
                            android:gravity="right"
                            android:text="@string/or_scan_qr_code"
                            android:textColor="@color/tingtel_light_red"
                            android:textSize="10sp" />

                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/pinEditext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_lock"
                            android:drawablePadding="8dp"
                            android:fontFamily="@font/raleway_regular"
                            android:hint="Enter transfer pin"
                            android:inputType="numberPassword"
                            android:maxLength="7"
                            android:maxLines="1"
                            android:textSize="17sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/whatIsPin_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/rubik_medium_italic"
                        android:gravity="right"
                        android:text="@string/what_is_pin"
                        android:textColor="@color/tingtel_light_red"
                        android:textSize="12sp" />


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="16dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/confirmAmount_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:fontFamily="@font/rubik_regular"
                            android:hint="@string/confirmation_amount_is_displayed_here"
                            android:inputType="number"
                            android:maxLength="7"
                            android:textColor="@color/black"
                            android:maxLines="1"
                            android:textSize="20sp" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <Button
                        android:id="@+id/btn_preview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="40dp"
                        android:layout_marginBottom="40dp"
                        android:background="@drawable/rounded_button_corners"
                        android:fontFamily="@font/raleway_regular"
                        android:text="@string/preview"
                        android:textColor="@color/white"
                        android:textSize="17sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
