<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tingtel_bg4"
    android:orientation="vertical"
    tools:context=".fragments.transfer_airtime.TransferAirtimeReceiverInfoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/appbar_layout"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/_10ssp"
        android:paddingVertical="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/backArrowLayout"
                android:src="@drawable/back_arrow" />

            <ImageView
                android:id="@+id/homeImageview"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_home" />


            <ImageView
                android:id="@+id/settingsImageview"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_10sdp"
                android:src="@drawable/ic_settings_white_24dp" />
        </RelativeLayout>

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/_13ssp"
                android:layout_marginTop="@dimen/_30ssp"
                android:layout_marginBottom="@dimen/_18ssp"
                app:cardBackgroundColor="@color/tingtel_lighter_gray"
                app:cardCornerRadius="@dimen/_18ssp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/_30ssp">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="25dp"
                        android:fontFamily="@font/rubik_medium"
                        android:text="@string/receiver_s_details"
                        android:textAlignment="center"
                        android:textColor="@color/tingtel_red_color"
                        android:textSize="@dimen/_16ssp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/tingtel_light_gray"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/raleway_regular"
                            android:text="@string/network"
                            android:textSize="@dimen/_9ssp" />

                        <Spinner
                            android:id="@+id/network_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTintMode="src_atop"
                            android:popupBackground="@color/tingtel_light_gray" />

                    </LinearLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginVertical="@dimen/_13ssp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/receivers_phone_number_edittext"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:drawableLeft="@drawable/ic_phone"
                                android:drawablePadding="8dp"
                                android:fontFamily="@font/raleway_regular"
                                android:hint="@string/enter_receiver_s_phone_number"
                                android:inputType="phone"
                                android:maxLength="11"
                                android:maxLines="1"
                                android:textSize="@dimen/_13ssp" />

                            <ImageView
                                android:id="@+id/codeImageView"
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:layout_weight="0.7"
                                android:src="@drawable/code" />
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_select_beneficiary"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:fontFamily="@font/rubik_medium_italic"
                                android:text="@string/select_beneficiary"
                                android:textColor="@color/tingtel_light_red"
                                android:textSize="@dimen/_8ssp" />

                            <TextView
                                android:id="@+id/scanCodeTextview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:fontFamily="@font/rubik_medium_italic"
                                android:text="@string/or_scan_qr_code"
                                android:textColor="@color/tingtel_light_red"
                                android:textSize="@dimen/_8ssp" />

                        </RelativeLayout>

                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/pinEditext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_lock"
                            android:drawablePadding="8dp"
                            android:fontFamily="@font/raleway_regular"
                            android:hint="@string/enter_transfer_pin"
                            android:inputType="numberPassword"
                            android:maxLength="7"
                            android:maxLines="1"
                            android:textSize="@dimen/_13ssp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/whatIsPin_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/rubik_medium_italic"
                        android:gravity="right"
                        android:text="@string/what_is_pin"
                        android:textColor="@color/tingtel_light_red"
                        android:textSize="@dimen/_8ssp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_15ssp"
                        android:gravity="start"
                        android:text="@string/amount_to_be_sent"
                        android:textColor="@color/tingtel_gray_color"
                        android:textSize="@dimen/_10ssp" />

                    <TextView
                        android:id="@+id/confirmAmount_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="start"
                        android:text=""
                        android:textColor="@color/tingtel_light_red"
                        android:textSize="@dimen/_14ssp" />

                    <Button
                        android:id="@+id/btn_preview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_30ssp"
                        android:layout_marginBottom="@dimen/_30ssp"
                        android:background="@drawable/rounded_button_corners"
                        android:fontFamily="@font/raleway_regular"
                        android:text="@string/preview"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14ssp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>
