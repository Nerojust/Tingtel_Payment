<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="tingtel.payment">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".utils.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".activities.settings.AboutUsActivity"
            android:parentActivityName=".activities.SettingsActivity" />
        <activity
            android:name=".activities.settings.ReportIssueActivity"
            android:parentActivityName=".activities.SettingsActivity" />
        <activity
            android:name=".activities.settings.TutorialActivity"
            android:parentActivityName=".activities.SettingsActivity" />
        <activity
            android:name=".activities.settings.ManageSimActivity"
            android:parentActivityName=".activities.SettingsActivity" />
        <activity
            android:name=".activities.settings.AddSimActivity"
            android:parentActivityName=".activities.SettingsActivity" />
        <activity
            android:name=".activities.settings.ChangeEmailActivity"
            android:parentActivityName=".activities.SettingsActivity" />
        <activity
            android:name=".activities.settings.ChangePasswordActivity"
            android:parentActivityName=".activities.SettingsActivity" />

        <activity android:name=".activities.QRCodeScanActivity" />
        <activity android:name=".activities.QRCodeDisplayActivity" />
        <activity
            android:name=".activities.SettingsActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.SignUpActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.SignInActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activities.OnBoardActivity" />
        <activity
            android:name=".activities.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>